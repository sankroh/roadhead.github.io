body,
.pure-g [class *= "pure-u"],
.pure-g-r [class *= "pure-u"] {
    /* Set your content font stack here: */
    font-family: Georgia, Times, "Times New Roman", serif;
}

.layout {
    position: relative;
    margin: 0 auto;
    width: 90%;
}

.row {
    padding: 5px 20px;
}

.sidebar { position:fixed; top:0; bottom:0; margin-left: -25%; width: 25%; }
